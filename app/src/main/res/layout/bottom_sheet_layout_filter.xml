<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/affichage_2_100"
    android:orientation="vertical"
    android:padding="5dp">

    <!-- Ajoutez ici vos vues (TextView, EditText, Button, etc.) -->
    <Button
        android:id="@+id/retour"
        android:layout_width="36dp"
        android:layout_height="27dp"
        android:background="?attr/homeAsUpIndicator"
        android:backgroundTint="#80CBC4"
        android:backgroundTintMode="add"
        android:textColorHint="@android:color/holo_green_light" />

    <TextView
        android:id="@+id/bottom_sheet_title"
        android:layout_width="116dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="30dp"

        android:fontFamily="@font/futura_md_bt_medium"
        android:padding="2dp"
        android:text="FILTRE"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="Type Marque: "
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <Spinner
            android:id="@+id/typeMark"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:paddingHorizontal="5dp"
            android:paddingVertical="5dp"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/typeLotLabel"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingHorizontal="5dp"
            android:paddingVertical="5dp"
            android:text="Type Lot: "
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <Spinner
            android:id="@+id/typeLot"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:paddingHorizontal="5dp"
            android:paddingVertical="5dp"
            android:textColor="@color/white"
            android:textSize="16dp" />

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="Etat: "
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/etat"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:paddingHorizontal="5dp"
            android:paddingVertical="5dp"
            android:textColor="@color/white" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">



        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingHorizontal="5dp"
            android:paddingVertical="5dp"
            android:text="Date debut : "
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <EditText
            android:id="@+id/dateDebut"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:inputType="date"
            android:paddingHorizontal="5dp"
            android:paddingVertical="5dp"
            android:textColor="@color/white"
            android:textSize="16dp" />

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingHorizontal="5dp"
            android:paddingVertical="5dp"
            android:text="Date Fin "
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <EditText
            android:id="@+id/dateFin"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:inputType="date"
            android:paddingHorizontal="5dp"
            android:paddingVertical="5dp"
            android:textColor="@color/white"
            android:textSize="16dp"  />



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginVertical="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingHorizontal="5dp"
            android:paddingVertical="5dp"
            android:text="Marks AffichÃ©s "
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <Spinner
            android:id="@+id/listeMarks"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:paddingHorizontal="5dp"
            android:paddingVertical="5dp"
            android:textColor="@color/white" />

</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:id="@+id/ok_button"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/rounded_button_valider"
            android:text="Valider"
            android:textColor="@color/white"/>
        <Button
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:background="@drawable/rounded_button_annuler"
            android:text="Annuler"
            android:layout_marginLeft="30dp"
            android:textColor="@color/white"/>

            </LinearLayout>
</LinearLayout>
